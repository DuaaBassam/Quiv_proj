<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lay"
    tools:context=".Login"
    android:weightSum="1"
    android:background="@android:color/black">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="184dp"
        android:layout_height="195dp"
        android:id="@+id/imageView"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/daa1" />


    <TextView
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Textview"
        android:textSize="33sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:layout_weight="0.06"
        android:textColor="@android:color/background_light" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number_person"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:hint=" ID"
        android:layout_marginStart="10dp"
        android:textColor="?android:attr/colorForegroundInverse"
        android:drawableLeft="@drawable/ic_person"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_marginEnd="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint=" password"
        android:textSize="22sp"
        android:layout_marginStart="10dp"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        android:drawableLeft="@drawable/ic_android_black_24dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_https_black_24dp"
        android:background="@android:color/background_light" />

    <Button
        android:text="Log in "
        android:id="@+id/button"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        android:background="@android:color/background_light"
        android:layout_marginEnd="10dp"
        android:layout_weight="0.08" />
</LinearLayout>
