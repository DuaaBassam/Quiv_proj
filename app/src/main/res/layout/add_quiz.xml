<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_quiz"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/quizNo"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:typeface="sans"
        android:textColor="@android:color/darker_gray"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:text="No. Quiz "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginLeft="21dp"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:typeface="sans"
        android:layout_marginStart="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp">

        <RadioButton
            android:text="Time for Question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RadioButton
            android:text="Time for Quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton1"
            android:layout_alignLeft="@+id/radioGroup2"
            android:layout_alignStart="@+id/radioGroup2" />
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="111dp"
        android:layout_height="70dp">

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/quesNo"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:typeface="sans"
            android:textColor="@android:color/darker_gray"
            android:layout_height="40dp"
            android:layout_width="20dp" />

        <TextView
            android:text="Question : "
            android:layout_height="40dp"
            android:id="@+id/textView1"
            android:layout_marginLeft="21dp"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:typeface="sans"
            android:layout_alignLeft="@+id/quesNo"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_width="100dp" />
        <EditText
            android:layout_height="40dp"
            android:id="@+id/question"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:typeface="sans"
            android:layout_alignLeft="@+id/textView1"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:weightSum="1">

        <TextView
            android:text="Answer : "
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView2"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:typeface="sans"
            android:textColor="@android:color/background_light"
            android:layout_height="40dp"
            android:layout_width="wrap_content" />


        <EditText
            android:layout_height="40dp"
            android:id="@+id/answer"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:typeface="sans"
            android:layout_alignLeft="@+id/textView1"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:layout_width="147dp" />

        <CheckBox
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/correct"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:typeface="sans"
            android:layout_weight="0.45"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp" />

        <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addAnswer"
            android:layout_weight="1"
            android:background="@android:drawable/ic_input_add"
            android:textStyle="normal|bold"
            android:typeface="sans"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>

    <TextView
        android:text="Time : "
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:typeface="sans"
        android:textColor="@android:color/background_light"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp" />

    <Spinner
        android:layout_width="100dp"
        android:id="@+id/spinner"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
    <resources android:layout_width="wrap_content">

    </resources>

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:id="@+id/addquiz"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_alignBaseline="@+id/addquiz"
        android:layout_alignBottom="@+id/addquiz"
        android:layout_toRightOf="@+id/addquiz"
        android:layout_toEndOf="@+id/addquiz" />

</RelativeLayout